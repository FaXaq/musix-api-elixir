defmodule Musix.NoteController do
  use Musix.Web, :controller

  @valid_notes ["Ab","A","A#","Bb","B","C","C#","Db","D","D#","Eb","E","F","F#","Gb","G","G#"]

  def index(conn, params) do

    note = params["note"]

    if validate_note? note do
      json conn, %{message: note}
    else
      json conn, %{message: "Enter a valid note"}
    end
  end

  def validate_note?(note) do
    IO.puts note
    if Enum.member?(@valid_notes, note) do
      true
    else
      false
    end
  end
end
